{
    "name": "vrijplaatsleiden/voordekunst-crawler",
    "type": "library",
    "description": "vdkcrawler",
    "keywords": [
        "vrijplaatsleiden",
        "voordekunst-crawler"
    ],
    "homepage": "https://github.com/vrijplaatsleiden/voordekunst-crawler",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald",
            "email": "ronald@vrijplaatsleiden.nl",
            "homepage": "www.vrijplaatsleiden.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Vpl\\VdkCrawler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vpl\\VdkCrawler\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
